---
interface Props {
	title: string;
}

import logo from "./logo.svg";
import { Image } from "astro:assets";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-black text-neutral-100">
		<nav class="bg-neutral-950">
			<div class="container mx-auto p-4 flex gap-4 items-center">
				<Image src={logo} alt="cloudcosmos logo" />
				<span class="font-monoCustom text-3xl">cloudcosmos</span>
			</div>
		</nav>
		<slot />
	</body>
</html>
